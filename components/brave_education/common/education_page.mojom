module brave_education.mojom;

// The set of browser commands sent by brave.com content, and understood by the
// browser.
enum Command {
  kOpenRewardsOnboarding = 1,
  kOpenWalletOnboarding = 2,
  kOpenVPNOnboarding = 3,
  kOpenAIChat = 4
};

// Initializes messaging between the browser and the page.
interface EducationPageHandlerFactory {
  CreatePageHandler(pending_receiver<EducationPageHandler> receiver);
};

// Browser-side handler for requests from the WebUI page.
interface EducationPageHandler {

  // Returns the education content server URL that corresponds to the current
  // WebUI URL.
  GetServerUrl() => (string server_url);

  // Executes the command with the given ID and click information. Returns
  // whether or not the command was executed.
  ExecuteCommand(Command command) => (bool executed);
};
